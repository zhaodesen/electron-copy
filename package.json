{
  "name": "copy-app",
  "version": "1.0.2",
  "description": "copy app",
  "main": "main.js",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/zhaodesen/electron-copy.git"
  },
  "scripts": {
    "dev": "concurrently -k \"vite\" \"wait-on tcp:5174 && cross-env VITE_DEV_SERVER_URL=http://localhost:5174 electron .\"",
    "dev:with-publish": "npm run build:uia && npm run dev",
    "build": "vite build",
    "build:uia": "dotnet publish tools\\uia-helper -c Release -r win-x64 --self-contained true",
    "dist": "npm run build && npm run build:uia && electron-builder --publish always",
    "dist:local": "npm run build && npm run build:uia && electron-builder --publish never",
    "preview": "vite preview",
    "rebuild": "node -e \"console.log('No native modules to rebuild')\"",
    "start": "electron .",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "zhaodesen",
  "license": "ISC",
  "dependencies": {
    "electron-updater": "^6.6.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.6.2",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^40.1.0",
    "electron-builder": "^25.1.8",
    "electron-rebuild": "^3.2.9",
    "vite": "^6.2.0",
    "wait-on": "^8.0.2"
  },
  "build": {
    "appId": "com.zhaodesen.copyapp",
    "productName": "Copy App",
    "directories": {
      "buildResources": "."
    },
    "files": [
      "dist/**/*",
      "main.js",
      "preload.cjs",
      "db.js",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "tools/uia-helper/bin/Release/net8.0-windows/win-x64/publish",
        "to": "uia-helper"
      }
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "icon.ico"
    },
    "publish": [
      {
        "provider": "github"
      }
    ]
  }
}
